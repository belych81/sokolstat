{% extends 'news/index.html.twig' %}

{% block title %}
    {{ entity.title }}
{% endblock %}

{% block content %}
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-md-12 col-lg-12">
        <div class="panel panel-success">
          <div class="panel-heading title-news">
            {{ entity.title }}
          </div>
          <div class="panel-body news">
            {{ entity.data|date('d.m.Y') }}
            <p>{{ entity.text|raw|nl2br }}</p>
            <table class="table">
              {% if transfers %}
                <thead>
                  <th>Игрок</th>
                  <th>Откуда</th>
                  <th>Куда</th>
                </thead>
                <tbody>
                {% for transfer in transfers %}
                  <tr>
                    <td>{{ transfer.player }}</td>
                    <td>{{ transfer.old.name }}</td>
                    <td>{{ transfer.new.name }}</td>
                  </tr>
                {% endfor %}
                </tbody>
              {% endif %}
            </table>
          </div>
        </div>
      </div>
    </div>
    <button class="btn btn-success articles-return">
      <a href="{{ path('news') }}"><i class="glyphicon glyphicon-chevron-left"></i> Назад к статьям</a>
    </button>
  </div>
{% endblock %}

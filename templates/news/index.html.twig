{% extends 'base.html.twig' %}

{% block title %}Новости{% endblock %}

{% block content %}

        <table class="content">
        {% for entity in entities %}
            <tr>
                <td class="date_news">{{ entity.data|date('d.m.Y') }}</td>
            </tr>
            <tr>
                <td><a href="{{ path('news_show', { 'translit': entity.translit }) }}" class="title_news">{{ entity.title }}</a></td>
            </tr>
            <tr>
                <td>{{ entity.text|nl2br }}
                    <a href="{{ path('news_show', { 'translit': entity.translit }) }}" class="newsLinkFull">
                        читать дальше</a><br/><hr/></td>
            </tr>

        {% endfor %}
        </table>
        {% if lastPage > 1 %}
            {% if app.request.get('page') > 1 %}
            <a href="{{ path('news', {'page': 1})}}">
            <img src="{{ asset('bundles/steamfbstat/images/double_arrows2.png') }}"
                 alt="Первая" title="Первая" class="arrow" /></a>

            <a href="{{ path('news', {'page': previousPage})}}">
            <img src="{{ asset('bundles/steamfbstat/images/strelkaLeft.png') }}"
                 alt="Предудыщая" title="Предудыщая" class="arrow" /></a>
            {% endif %}

            {% if lastPage != app.request.get('page') %}
            <a href="{{ path('news', {'page': nextPage})}}">
            <img src="{{ asset('bundles/steamfbstat/images/strelka.png') }}"
                 alt="Следующая" title="Следующая" class="arrow"/></a>

            <a href="{{ path('news', {'page': lastPage})}}">
            <img src="{{ asset('bundles/steamfbstat/images/double_arrows1.png') }}"
                 alt="Последняя" title="Последняя" class="arrow" /></a>
            {% endif %}
         {% endif %}


{% endblock %}

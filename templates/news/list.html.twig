{% for entity in entities %}
  <div class="panel panel-success">
    <div class="panel-heading title-news">
      <a href="{{ path('news_show', { 'translit': entity.translit }) }}">{{ entity.title }}</a>
    </div>
    <div class="panel-body news">
      {{ entity.data|date('d.m.Y') }}
      <div>{{ entity.text|raw|nl2br }}</div>
      <a href="{{ path('news_show', { 'translit': entity.translit }) }}" class="newsLinkFull">читать дальше</a>
    </div>
  </div>
{% endfor %}

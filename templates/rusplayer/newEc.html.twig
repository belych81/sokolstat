{% extends 'rusplayer/newChamp.html.twig' %}

{% block seasons %}
{% endblock %}

{% block navbar %}
{% endblock %}

{% block content %}
    <form action="{{ path('player_createEc', {'team': app.request.get('team'),
     'season': app.request.get('season'), 'turnir': app.request.get('turnir')}) }}"
        method="post">
       <table>
            <tbody>
                <tr>
                    <th>{{ form_label(form.player) }}</th>
                    <td>
                        {{ form_errors(form.player) }}
                        {{ form_widget(form.player) }}
                    </td>
                </tr>
                <tr>
                    <th>{{ form_label(form.goal) }}</th>
                    <td>
                        {{ form_errors(form.goal) }}
                        {{ form_widget(form.goal) }}
                    </td>
                </tr>
            </tbody>
       </table>
        <p>
            {{ form_row(form._token) }}
            <button type="submit" class="spiski">Добавить</button>
        </p>
    </form>
    <a href="{{ path('eurocup_showTeam', {'id': app.request.get('team'),
    'season': app.request.get('season'), 'turnir': app.request.get('turnir')}) }}">Назад</a>

{% endblock %}

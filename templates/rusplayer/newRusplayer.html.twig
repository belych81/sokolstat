{% extends 'rusplayer/newChamp.html.twig' %}
{% block content %}

    <form action="{{ path('player_createRusplayer', {'team': app.request.get('team'),
         'season': app.request.get('season'), 'country': app.request.get('country')}) }}"
            method="post">
       <table>
            <tbody>
                <tr>
                    <th>{{ form_label(form.player) }}</th>
                    <td>
                        {{ form_errors(form.player) }}
                        {{ form_widget(form.player) }}
                    </td>
                </tr>

            </tbody>
       </table>
        <p>
            {{ form_row(form._token) }}
            <button type="submit" class="spiski">Добавить</button>

        </p>
    </form>
<a href="{{ path('championships_show', {'id': app.request.get('team'),
'country': 'russia', 'season': app.request.get('season')}) }}">Назад</a>

{% endblock %}

      {% for key, country in tours %}

        {% if key in top5 %}
          {% set flag = true %}
          {% for k, arr in country %}
            {% if k == 'turnir' %}
              {% set turnirAlias =  arr %}
            {% endif %}

            {% set isMatches = false %}

            {% if flag %}
              {{ include('default/titleEmblemBlock.html.twig', { 'fileName': topEmblem[key], 'title': key }) }}

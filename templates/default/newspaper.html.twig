            {% if k == 'stadia' %}
              {{ include('default/cupBlock.html.twig', { 'arr': arr }) }}
            {% endif %}

            {% if k == 'table' and country.tour is defined %}
              {{ include('default/tableBlock.html.twig', { 'arr': arr }) }}

          <article class="textcols mund-article">
          </article>
          {% if otborEuro['lchGroups'] %}
            {% for stadia, group in otborEuro['lchGroups'] %}
              {{ include('default/mundGroupBlock.html.twig', { 'stadia': stadia, 'group': group }) }}

          {% for match in rfplMatch %}
            {% if match.tour == tour %}
              {{ include('default/rfplMatchesBlock.html.twig', { 'match': match }) }}
            {% endif %}
          {% endfor %}
        {% endfor %}

        {% for key, country in tours %}
          {% if key == 'Россия' %}

            {% for k, arr in country %}

              {% if k == 'table' %}
                {{ include('default/tableBlock.html.twig', { 'arr': arr }) }}
              {% endif %}
            {% endfor %}

<div class="ec-group">
  <div class="lch-group-name">{{ group['matches'].0.stadia.name }}</div>
  {% for match in group['matches'] %}
    <div class="eurocup-matches-sostav lch-match">
      <div class="eurocup-matches-sostav-title">
        <div class="match-sostav-title">
          <span class="match-main-info">
            {{ match.team.name | upper}} -
            {{ match.team2.name | upper }} -
            {{ match.score | replace({'-': ":"}) }}
          </span>
        </div>
        <div class="match-info">
          {% if match.ecsostav and match.ecsostav.city %}
            <img class="match-team-img" src="{{ asset('images/clubs/') }}{{ match.team.image }}" />
              <div class="match-main-info">
                {{ match.ecsostav.city.name }}.
                {{ match.data | date('d') }} {{ mnths[match.data | date('n')] }}.<br/>
                {% if match.ecsostav.zriteli > 0 %}
                  {{ match.ecsostav.zriteli | number_format(0, '.', ' ') }} зрителей.<br/>
                {% endif %}
                Судья {{ match.ecsostav.referee.name }} ({{ match.ecsostav.referee.country.name }}).
              </div>
            <img class="match-team2-img" src="{{ asset('images/clubs/') }}{{ match.team2.image }}" />
          {% endif %}
        </div>
      </div>
      {% if match.ecsostav %}
           <div class="match-sostav">
              <p><em><b>{{ match.team.name }}</b></em>:
                {{ match.ecsostav.team }}</p>
              <p><em><b>{{ match.team2.name }}</b></em>: {{ match.ecsostav.team2 }}</p>
          </div>
      {% endif %}
      {% if match.score != '0-0' %}
        <p><b>Голы</b>: {{ match.bomb | replace({'(а)': ' - в свои ворота', '(п)': ' - с пенальти'})}}.</p>
      {% endif %}
    </div>
  {% endfor %}
  {% if group['tomm'] is defined %}
    <div class="ec-matches-tomm">
      {% for date, dates in group['tomm'] %}
        <div><strong>{{ date | replace({'.9': ' сентября', '.10': ' октября', '.11': ' ноября', '.12': ' декабря'})}}</strong></div>
        {% for match in dates %}
          <div>{{ match.team | upper }} - {{ match.team2 | upper }}</div>
        {% endfor %}
      {% endfor %}
    </div>
  {% endif %}
  {{ include('default/lchTable.html.twig', { 'arr': group['table'] }) }}
</div>

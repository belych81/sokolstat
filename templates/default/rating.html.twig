{% block body %}
  <table>
    {% for team, score in rating %}
      <tr>
        <td>{{ loop.index }}</td>
        <td>{{ team }}</td>
        <td>{{ score.sum }} ({{ score.matches }} +{{ score.wins }}={{ score.nich }}-{{ score.porazh }} {{ score.mz }}-{{ score.mp }})</td>
      </tr>
    {% endfor %}
  </table>
{% endblock %}

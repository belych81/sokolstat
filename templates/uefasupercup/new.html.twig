{% extends 'cup/index.html.twig' %}

{% block title %}
    Добавить матч
{% endblock %}

{% block description %}
{% endblock %}

{% block seasons %}
{% endblock %}

{% block content %}
    <p>Матч: <b>{{entity.team}} - {{entity.team2}}</b></p>
    <form action="{{ path('nationsupercup_create', {'id': app.request.get('id'),
      'country': app.request.get('country')}) }}"
      method="post">
       <table class="form-edit">
            <tbody>
                <tr>
                    <th>{{ form_label(form.data) }}</th>
                    <td>
                        {{ form_errors(form.data) }}
                        {{ form_widget(form.data) }}
                    </td>
                </tr>
                <tr>
                    <th>{{ form_label(form.score) }}</th>
                    <td>
                        {{ form_errors(form.score) }}
                        {{ form_widget(form.score) }}
                    </td>
                </tr>
                <tr>
                    <th>{{ form_label(form.goal) }}</th>
                    <td>
                        {{ form_errors(form.goal) }}
                        {{ form_widget(form.goal) }}
                    </td>
                </tr>
                {% if app.request.get('country') == 'russia' or app.request.get('country') == 'uefa'  %}
                  <tr>
                      <th>{{ form_label(form.game) }}</th>
                      <td>
                          {{ form_errors(form.game) }}
                          {{ form_widget(form.game) }}
                      </td>
                  </tr>
                  <tr>
                      <th>{{ form_label(form.game2) }}</th>
                      <td>
                          {{ form_errors(form.game2) }}
                          {{ form_widget(form.game2) }}
                      </td>
                  </tr>
                {% endif %}
            </tbody>
       </table>
        <p>
            {{ form_row(form._token) }}
            <button type="submit" class="spiski">Добавить</button>

        </p>
    </form>


{% endblock %}

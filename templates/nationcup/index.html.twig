{% extends 'cup/index.html.twig' %}

{% block title %}
   Кубок {{ rusCountry }} {{ app.request.get('season') }}
{% endblock %}

{% block keywords %}
    <meta name="keywords" content="кубок {{ rusCountry }} {{ app.request.get('season') }},
          бомбардиры, матчи">
{% endblock %}

{% block description %}
    <meta name="description" content="кубок {{ rusCountry }} {{ app.request.get('season') }},
          бомбардиры, матчи">
{% endblock %}

{% block seasons %}
    {% for season in seasons %}
        {% if app.request.get('season') == season.season.name %}
            <b>{{ season.season.name }}</b>
        {% else %}
            <a href="{{ path('nationcup', {'country': app.request.get('country'), 'season': season.season.name}) }}" class="spiski">{{ season.season.name }}</a>
        {% endif %}
    {% endfor %}
{% endblock %}

{% block zagolovok %}
    <h3>Кубок {{ rusCountry }} {{ app.request.get('season') }}</h3>
{% endblock %}

{% block content %}
    <table>
        <tr>
            <td>
    <table>
      {% for stad in stadies %}
          <tr class="shipTableTitle">
                <td colspan="3" class="tableGoal">{{ stad.name }}</td>
          </tr>
        {% for entity in stad.stadiamatches %}
        <tr class="{{ cycle(['odd', 'even'], loop.index) }}">
            <td class="scMatch">
                <div class="spiski">{{ entity.team.name }} - {{ entity.team2.name }}</div>
            </td>
            <td class="scScore">
                {% if entity.status %}
                    {{ entity.data | date('d.m H:i') }}
              {% else %}
                  {{ entity.score }}
                  {% endif %}
            </td>
            <td class="scBomb">
                {{ entity.bomb }}
            </td>
        </tr>

        {% endfor %}
      {% endfor %}
    </table>
            </td>

        </tr>
    </table>
{% endblock %}

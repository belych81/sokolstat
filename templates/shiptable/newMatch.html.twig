{% extends 'shiptable/index.html.twig' %}

{% block title %}
    Добавить матч
{% endblock %}

{% block keywords %}
{% endblock %}

{% block description %}
{% endblock %}

{% block seasons %}
{% endblock %}

{% block zagolovok %}
{% endblock %}

{% block content %}

    <form action="{{ path('championships_createMatch', {'country': app.request.get('country'), 'season': app.request.get('season')}) }}"
          method="post" {{ form_enctype(form) }}>
       <table>
            <tbody>
                <tr>
                    <th>{{ form_label(form.tour) }}</th>
                    <td>
                        {{ form_errors(form.tour) }}
                        {{ form_widget(form.tour) }}
                    </td>
                </tr>
                <tr>
                    <th>{{ form_label(form.data) }}</th>
                    <td>
                        {{ form_errors(form.data) }}
                        {{ form_widget(form.data) }}
                    </td>
                </tr>
                <tr>
                    <th>{{ form_label(form.team) }}</th>
                    <td>
                        {{ form_errors(form.team) }}
                        {{ form_widget(form.team) }}
                    </td>
                </tr>
                <tr>
                    <th>{{ form_label(form.team2) }}</th>
                    <td>
                        {{ form_errors(form.team2) }}
                        {{ form_widget(form.team2) }}
                    </td>
                </tr>
                <tr>
                    <th>{{ form_label(form.goal1) }}</th>
                    <td>
                        {{ form_errors(form.goal1) }}
                        {{ form_widget(form.goal1) }}
                    </td>
                </tr>
                <tr>
                    <th>{{ form_label(form.goal2) }}</th>
                    <td>
                        {{ form_errors(form.goal2) }}
                        {{ form_widget(form.goal2) }}
                    </td>
                </tr>
                <tr>
                    <th>{{ form_label(form.bomb) }}</th>
                    <td>
                        {{ form_errors(form.bomb) }}
                        {{ form_widget(form.bomb) }}
                    </td>
                </tr>
            </tbody>
       </table>
        <p>
            {{ form_row(form._token) }}
            <button type="submit" class="spiski">Добавить</button>

        </p>
    </form>


{% endblock %}

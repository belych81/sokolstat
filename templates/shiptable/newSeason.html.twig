{% extends 'shiptable/index.html.twig' %}

{% block title %}
    Добавить сезон
{% endblock %}

{% block description %}
{% endblock %}

{% block seasons %}
{% endblock %}

{% block zagolovok %}
{% endblock %}

{% block content %}

    <form action="{{ path('championships_createSeason',
      {'country': app.request.get('country')}) }}"
          method="post" >
       <table>
            <tbody>
                <tr>
                    <th>{{ form_label(form.season) }}</th>
                    <td>
                        {{ form_errors(form.season) }}
                        {{ form_widget(form.season) }}
                    </td>
                </tr>
                
                <tr>
                    <th>{{ form_label(form.team) }}</th>
                    <td>
                        {{ form_errors(form.team) }}
                        {{ form_widget(form.team) }}
                    </td>
                </tr>
            </tbody>
       </table>
        <p>
            {{ form_row(form._token) }}
            <button type="submit" class="spiski">Добавить</button>

        </p>
    </form>


{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}
    Добавить матч
{% endblock %}

{% block description %}
{% endblock %}

{% block seasons %}
{% endblock %}

{% block content %}

    <form action="{{ path('eurocup_createMatch', {'season': app.request.get('season')}) }}"
          method="post">
       <table>
            <tbody>
                <tr>
                    <th>{{ form_label(form.turnir) }}</th>
                    <td>
                        {{ form_errors(form.turnir) }}
                        {{ form_widget(form.turnir) }}
                    </td>
                </tr>
                <tr>
                    <th>{{ form_label(form.stadia) }}</th>
                    <td>
                        {{ form_errors(form.stadia) }}
                        {{ form_widget(form.stadia) }}
                    </td>
                </tr>
                <tr>
                    <th>{{ form_label(form.number) }}</th>
                    <td>
                        {{ form_errors(form.number) }}
                        {{ form_widget(form.number) }}
                    </td>
                </tr>
                <tr>
                    <th>{{ form_label(form.data) }}</th>
                    <td>
                        {{ form_errors(form.data) }}
                        {{ form_widget(form.data) }}
                    </td>
                </tr>
                <tr>
                    <th>{{ form_label(form.team) }}</th>
                    <td>
                        {{ form_errors(form.team) }}
                        {{ form_widget(form.team) }}
                    </td>
                </tr>
                <tr>
                    <th>{{ form_label(form.team2) }}</th>
                    <td>
                        {{ form_errors(form.team2) }}
                        {{ form_widget(form.team2) }}
                    </td>
                </tr>

                <tr>
                    <th>{{ form_label(form.score) }}</th>
                    <td>
                        {{ form_errors(form.score) }}
                        {{ form_widget(form.score) }}
                    </td>
                </tr>
                <tr>
                    <th>{{ form_label(form.bomb) }}</th>
                    <td>
                        {{ form_errors(form.bomb) }}
                        {{ form_widget(form.bomb) }}
                    </td>
                </tr>
            </tbody>
       </table>
        <p>
            {{ form_row(form._token) }}
            <button type="submit" class="spiski">Добавить</button>

        </p>
    </form>

    <a href="{{ path('eurocup', { 'turnir': 'leagueChampions',
        'season': app.request.get('season')}) }}">Назад</a>

{% endblock %}

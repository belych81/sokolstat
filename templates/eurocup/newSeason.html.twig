{% extends 'eurocup/new.html.twig' %}

{% block title %}
    Добавить матч
{% endblock %}

{% block description %}
{% endblock %}

{% block seasons %}
{% endblock %}

{% block zagolovok %}
{% endblock %}

{% block content %}

<form action="{{ path('eurocup_createSeason',
  {'turnir': app.request.get('turnir'), 'season': app.request.get('season')}) }}"
      method="post" >
   <table>
        <tbody>
            <tr>
                <th>{{ form_label(form.stadia) }}</th>
                <td>
                    {{ form_errors(form.stadia) }}
                    {{ form_widget(form.stadia) }}
                </td>
            </tr>

            <tr>
                <th>{{ form_label(form.team) }}</th>
                <td>
                    {{ form_errors(form.team) }}
                    {{ form_widget(form.team) }}
                </td>
            </tr>
        </tbody>
   </table>
    <p>
        {{ form_row(form._token) }}
        <button type="submit" class="spiski">Добавить</button>

    </p>
</form>
{% endblock %}

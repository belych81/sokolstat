{% extends 'shiptable/index.html.twig' %}

{% block title %}
    Обновить команду
{% endblock %}

{% block description %}
{% endblock %}

{% block seasons %}
{% endblock %}

{% block content %}

    <form action="{{ path('ectable_update',
    {'id': app.request.get('id'), 'season': app.request.get('season'),
    'turnir': app.request.get('turnir'), 'stadia': app.request.get('stadia')}) }}"
      method="post">
       <table>
            <tbody>
                <tr>
                    <th>{{ form_label(edit_form.wins) }}</th>
                    <td>
                        {{ form_errors(edit_form.wins) }}
                        {{ form_widget(edit_form.wins) }}
                    </td>
                </tr>
                <tr>
                    <th>{{ form_label(edit_form.nich) }}</th>
                    <td>
                        {{ form_errors(edit_form.nich) }}
                        {{ form_widget(edit_form.nich) }}
                    </td>
                </tr>
                <tr>
                    <th>{{ form_label(edit_form.porazh) }}</th>
                    <td>
                        {{ form_errors(edit_form.porazh) }}
                        {{ form_widget(edit_form.porazh) }}
                    </td>
                </tr>
                <tr>
                    <th>{{ form_label(edit_form.mz) }}</th>
                    <td>
                        {{ form_errors(edit_form.mz) }}
                        {{ form_widget(edit_form.mz) }}
                    </td>
                </tr>
                <tr>
                    <th>{{ form_label(edit_form.mp) }}</th>
                    <td>
                        {{ form_errors(edit_form.mp) }}
                        {{ form_widget(edit_form.mp) }}
                    </td>
                </tr>
                <tr>
                    <th>{{ form_label(edit_form.score) }}</th>
                    <td>
                        {{ form_errors(edit_form.score) }}
                        {{ form_widget(edit_form.score) }}
                    </td>
                </tr>
            </tbody>
       </table>
        <p>
            {{ form_row(edit_form._token) }}
            <button type="submit" class="spiski">Добавить</button>

        </p>
    </form>
<a href="{{ path('eurocup', {'stadia': app.request.get('stadia'),
'turnir': app.request.get('turnir'), 'season': app.request.get('season')}) }}">Назад</a>

{% endblock %}

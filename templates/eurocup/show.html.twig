{% extends 'eurocup/index.html.twig' %}

{% block title %}
    Состав команды {{ club.0.name }} в Лиге Чемпионов сезона {{ app.request.get('season') }}
{% endblock %}

{% block description %}
    <meta name="description" content="еврокубки,  {{ app.request.get('season') }},
           матчи, авторы забитых мячей">
{% endblock %}

{% block zagolovok %}
    <p class="zagolovok"><a href="{{ path('eurocup', {'season': app.request.get('season'),
             'turnir': app.request.get('turnir')}) }}">
                Лига Чемпионов {{ app.request.get('season') }}</a></p>
    {% endblock %}


{% block content %}
<div class="teams-list">{{ app.request.get('team') }}
  {% for team in teams %}
    {% if team.team.translit != app.request.get('id') %}
      <a href="{{ path('eurocup_show', {'season': app.request.get('season'),
          'id': team.team.translit, 'turnir': app.request.get('turnir')}) }}"
      class="">
            {{ team.team.name }}</a>
    {% endif %}
  {% endfor %}
</div>
<div class="team-show-image">
  <div>
    <h1>Лига Чемпионов {{ app.request.get('season') }}. {{ club.0.name }}</h1>
    {% if club.0.image %}
    <img src="{{ asset('images/clubs/') }}{{ club.0.image }}"
      alt="{{ club.0.name }}" title="{{ club.0.name }}" />
    {% endif %}
  </div>
</div>
<div class="champ-table champs">
    <table>
        <thead>
            <tr class="shipTableTitle">
                <th>&nbsp;</th>
                <th class="teamStatPlayer">&nbsp;</th>
                <th class="teamStatGoal">И</th>
                <th class="teamStatGoal">Г</th>
                <th class="teamStatGoal">И (всего)</th>
                <th class="teamStatGoal">Г (всего)</th>
            </tr>
        </thead>
        <tbody>
        {% for player in players %}
            <tr class="{{ cycle(['odd', 'even'], loop.index) }}">
                <td class="player-position">{{ loop.index }}</td>
                <td>

                    <a href="{{ path('player_show', {'id': player.player.translit}) }}" class="spiski">
                        {{ player.player.name }}</a>

                </td>
                <td class="tableGoal">
                    {% if is_granted("ROLE_ADMIN") %}
                        <a href="{{ path('playeradmin_editLchplayer',
                          {'id': player.id, 'season': app.request.get('season'),
                          'team': app.request.get('id'), 'change': 'gameMinus'}) }}" class="plusMinus">-</a>
                      {{ player.game }}
                        <a href="{{ path('playeradmin_editLchplayer',
                      {'id': player.id, 'season': app.request.get('season'),
                      'team': app.request.get('id'), 'change': 'gamePlus'}) }}" class="plusMinus">+</a>
                    {% else %}
                        {{ player.game }}
                    {% endif %}
                </td>
                <td class="tableGoal">
                    {% if is_granted("ROLE_ADMIN") %}
                        <a href="{{ path('playeradmin_editLchplayer',
                 {'id': player.id, 'season': app.request.get('season'),
                    'team': app.request.get('id'), 'change': 'goalMinus'}) }}" class="plusMinus">-</a>
                        {{ player.goal }}
                    <a href="{{ path('playeradmin_editLchplayer',
                 {'id': player.id, 'season': app.request.get('season'),
                    'team': app.request.get('id'), 'change': 'goalPlus'}) }}" class="plusMinus">+</a>
                    {% else %}
                        {{ player.goal }}
                    {% endif %}</td>
                <td class="tableGoal">
                    {{ player.player.lchGame  }}
                </td>
                <td class="tableGoal">
                    {{ player.player.lchGoal }}
                </td>

            </tr>
        {% endfor %}
        </tbody>
    </table>
        {% if is_granted("ROLE_ADMIN") %}
        <a href="{{ path('player_newlchplayer', {'season': app.request.get('season'),
            'team': app.request.get('id')}) }}">
            Добавить игрока</a>
        {% endif %}
</div>

            <div class="champ-bombs champs">
                <p><b>Бомбардиры</b></p>
                <table class="">
        <thead>
            <tr class="shipTableTitle">
                <th>&nbsp;</th>
                <th class="bombName">&nbsp;</th>
                <th>Клуб</th>
                <th class="teamStatGoal">Г</th>


            </tr>
        </thead>
        <tbody>
        {% for bomb in bombs %}

            <tr class="odd">
                <td class="player-position">{{ loop.index }}</td>
                <td class="spiski">
                    <a href="{{ path('player_show', {'id': bomb.player.translit}) }}" class="spiski">
                        {{ bomb.player.name }}</a>

                 </td>

                <td>{{ bomb.team.name }}</td>
                <td class="tableGoal">{{ bomb.goal }}</td>
                </tr>
        {% endfor %}
        </tbody>
    </table>
            </div>

{% endblock %}

{% extends 'nhl/index.html.twig' %}

{% block title %}
    Добавить игрока
{% endblock %}

{% block description %}
{% endblock %}

{% block seasons %}
{% endblock %}

{% block content %}

    <form action="{{ path('nhl_createChampPlayer', {'team': app.request.get('team'), 'country': app.request.get('country'),
    'season': app.request.get('season'), 'flag': app.request.get('flag')}) }}" method="post">
       <table>
            <tbody>
                <tr>
                    <th>Player</th>
                    <td>
                        {% if app.request.get('flag') == 'nfl' %}
                            <input type="text" id="rus_player" autocomplete="off" />
                            <input type="hidden" id="rus_player_hidden" name="nhl_champ[player]" />
                            <div class="player_search_result">
                                <div class="player_search_result_items"></div>
                            </div>
                        {% else %}
                            {{ form_errors(form.player) }}
                            {{ form_widget(form.player) }}
                        {% endif %}
                    </td>
                </tr>
            </tbody>
       </table>
        <p>
            {{ form_row(form._token) }}
            <button type="submit" class="spiski">Добавить</button>

        </p>
    </form>
<a href="{{ path('nhl_show', {'id': app.request.get('team'),
'season': app.request.get('season')}) }}">
  Назад</a>

{% endblock %}

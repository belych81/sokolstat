{% extends 'nhl/index.html.twig' %}

{% block title %}
   Турнирная таблица НХЛ в сезоне {{ app.request.get('season') }}
{% endblock %}

{% block description %}
    <meta name="description" content="НХЛ в сезоне {{ app.request.get('season') }},
          бомбардиры, турнирная таблица, матчи">
{% endblock %}

{% block content %}
  <div><h1>НХЛ {{ app.request.get('season') }}</h1></div>

  <div class="row">
    {% for name, divis in division %}
      <div class="champ-table champs col-lg-4">
        <p class="champ-title">Дивизион {{ name }}</p>
          <table class="shipTable">
              <thead>
                  <tr class="shipTableTitle">
                      <th>&nbsp;</th>
                      <th>&nbsp;</th>
                      <th class="winsTable">И</th>
                      <th class="winsTable">В</th>
                      <th class="winsTable">ВО</th>
                      <th class="winsTable">Н</th>
                      <th class="winsTable">ПО</th>
                      <th class="winsTable">П</th>
                      <th class="goalsTable">M</th>
                      <th class="winsTable">О</th>

                  </tr>
              </thead>
              <tbody>
                {% for entity in divis %}

                  <tr class="{{ cycle(['odd', 'even'], loop.index) }}">
                      <td class="player-position">{{ loop.index }}</td>
                      <td class="tableLeft">
                          {{ entity.team.name }}</td>
                      <td>{{ entity.wins+entity.winst+entity.nich+entity.porazht++entity.porazh }}</td>
                      <td>{{ entity.wins }}</td>
                      <td>{{ entity.winst }}</td>
                      <td>{{ entity.nich }}</td>
                      <td>{{ entity.porazht }}</td>
                      <td>{{ entity.porazh }}</td>
                      <td>{{ entity.mz }}-{{ entity.mp }}</td>
                      <td class="table-score">{{ entity.score }}</td>

                  </tr>
                  {% endfor %}
              </tbody>
          </table>
      </div>
    {% endfor %}
  </div>

  <div class="row">
    {% for name, divis in conf %}
      <div class="champ-table champs col-lg-6">
        <p class="champ-title">Конференция {{ name }}</p>
          <table class="shipTable">
              <thead>
                  <tr class="shipTableTitle">
                      <th>&nbsp;</th>
                      <th>&nbsp;</th>
                      <th class="winsTable">И</th>
                      <th class="winsTable">В</th>
                      <th class="winsTable">ВО</th>
                      <th class="winsTable">Н</th>
                      <th class="winsTable">ПО</th>
                      <th class="winsTable">П</th>
                      <th class="goalsTable">M</th>
                      <th class="winsTable">О</th>

                  </tr>
              </thead>
              <tbody>
                {% for entity in divis %}

                  <tr class="{{ cycle(['odd', 'even'], loop.index) }}">
                      <td class="player-position">{{ loop.index }}</td>
                      <td class="tableLeft">
                          {{ entity.team.name }}</td>
                      <td>{{ entity.wins+entity.winst+entity.nich+entity.porazht++entity.porazh }}</td>
                      <td>{{ entity.wins }}</td>
                      <td>{{ entity.winst }}</td>
                      <td>{{ entity.nich }}</td>
                      <td>{{ entity.porazht }}</td>
                      <td>{{ entity.porazh }}</td>
                      <td>{{ entity.mz }}-{{ entity.mp }}</td>
                      <td class="table-score">{{ entity.score }}</td>

                  </tr>
                  {% endfor %}
              </tbody>
          </table>
      </div>
    {% endfor %}
  </div>
{% endblock %}

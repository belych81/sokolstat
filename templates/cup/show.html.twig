                    {% endif %}
                        {{ player.game }}</a>
					{% if is_granted("ROLE_ADMIN") %}
                    <a href="{{ path('playeradmin_editCup',
                 {'id': player.id, 'season': app.request.get('season'),
                    'team': app.request.get('id'), 'change': 'plusGame'}) }}">+</a>
                    {% endif %}
				</td>
                <td class="tableGoal">
                    {% if is_granted("ROLE_ADMIN") %}
                        <a href="{{ path('playeradmin_editCup',
                 {'id': player.id, 'season': app.request.get('season'),
                    'team': app.request.get('id'), 'change': 'minusGoal'}) }}">-</a>
                    {% endif %}
                    {{ player.goal }}
                {% if is_granted("ROLE_ADMIN") %}
                    <a href="{{ path('playeradmin_editCup',
                 {'id': player.id, 'season': app.request.get('season'),
                    'team': app.request.get('id'), 'change': 'plusGoal'}) }}">+</a>
                    {% endif %}
                </td>
                <td class="tableGoal">{{ player.gameTeam }}</td>
                <td class="tableGoal">{{ player.goalTeam }}</td>
                <td class="tableGoal">{{ player.player.rusplayers.0.totalgame }}</td>
                <td class="tableGoal">{{ player.player.rusplayers.0.totalgoal }}</td>
                </tr>
        {% endfor %}
        </tbody>
    </table>

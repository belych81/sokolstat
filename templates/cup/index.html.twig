{% extends 'shiptable/index.html.twig' %}

{% block title %}
   Кубок России {{ app.request.get('season') }}
{% endblock %}

{% block keywords %}
    <meta name="keywords" content="кубок России {{ app.request.get('season') }},
          бомбардиры, матчи">
{% endblock %}

{% block description %}
    <meta name="description" content="кубок России {{ app.request.get('season') }},
          бомбардиры, матчи">
{% endblock %}

{% block seasons %}
    {% for season in seasons %}
        {% if app.request.get('season') == season.season.name %}
            <b>{{ season.season.name }}</b>
        {% else %}
            <a href="{{ path('cup', {'season': season.season.name}) }}" class="spiski">{{ season.season.name }}</a>
        {% endif %}
    {% endfor %}
{% endblock %}

{% block zagolovok %}
    <h3>Кубок России {{ app.request.get('season') }}</h3>
{% endblock %}

{% block content %}
    <table>
        <tr>
            <td>
    <table>
      {% for stad in stadies %}
          <tr class="shipTableTitle">
                <td colspan="3" class="tableGoal">{{ stad.name }}</td>
          </tr>
        {% for entity in stad.stadiamatches %}
        <tr class="odd">
            <td class="scMatch">
                <div class="spiski">{{ entity.team.name }} - {{ entity.team2.name }}</div>
            </td>
            <td class="scScore">
              {{ entity.score }}
            </td>
            <td class="scBomb">
                {{ entity.bomb }}
            </td>
        </tr>
        <tr>
            <td colspan="3" class="even">
                <p><em><b>{{ entity.team.name }}</b></em>: {{ entity.game }}</p>
                <p><em><b>{{ entity.team2.name }}</b></em>: {{ entity.game2 }}</p>
            </td>
        </tr>
        {% endfor %}
      {% endfor %}
    </table>
            </td>
            <td class="scLink">

    {% for team in teams %}
    <p><a href="{{ path('cup_show', {'season': app.request.get('season'),
     'id': team.translit}) }}" class="spiski">{{ team.name }}</a></p>
    {% endfor %}

                </td>
        </tr>
    </table>
{% endblock %}
